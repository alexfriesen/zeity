{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "group:allNonMajor",
        ":semanticCommitTypeAll(chore)",
        ":widenPeerDependencies"
    ],
    "baseBranches": [
        "main"
    ],
    "lockFileMaintenance": {
        "enabled": true
    },
    "rangeStrategy": "bump",
    "packageRules": [
        {
            "groupName": "vitest",
            "matchPackageNames": [
                "vite-node",
                "vitest"
            ],
            "matchPackagePatterns": [
                "^@vitest/"
            ]
        }
    ]
}